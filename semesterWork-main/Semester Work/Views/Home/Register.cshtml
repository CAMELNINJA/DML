@model DAL_carshop.Models.Regist
@{
    ViewData["Title"] = "Register";
}

<div class="product_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="register">
                    <form asp-action="Register" asp-controller="Home" asp-anti-forgery="true">
                        <h3>Personal Information</h3>
                        <div>
                            <span>First Name<label>*</label></span>
                            <input type="text" asp-for="First_Name" />
                        </div>
                        <div>
                            <span>Last Name<label>*</label></span>
                            <input type="text" asp-for="Last_Name" />
                        </div>
                        <div>
                            <span>Email Address<label>*</label></span>
                            <input type="text" asp-for="Email" />
                        </div>
                        <h3>Login Information</h3>
                        <div>
                            <span>Password<label>*</label></span>
                            <input type="password" asp-for="Password" />
                        </div>
                        <div>
                            <span>Confirm Password<label>*</label></span>
                            <input type="password" asp-for="ConfirmPassword" />
                        </div>
                        <input type="submit" value="submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>